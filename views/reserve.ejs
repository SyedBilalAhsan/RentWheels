  <main class="container pb-5" role="main">
    <div class="container active show p5">
      <% if (records1) { %>
      <div class="row cars_container card-deck-wrapper card-deck">
        <% records1.forEach(function(row) { %>
        <div class="col my-2 card text-center">
          <img
            class="card-img-top img-fluid mx-auto d-block"
            loading="lazy"
            src="uploads/<%= row.imagename %>"
            alt=""
          />
          <p class="card-text">
            <strong>
              <i> <%= row.vname %> </i>
            </strong>
            -
              <%= row.vmodel %>
            <br>
            <i><%= row.fullprice %></i>
            Rs
            <br/>
            <br/>
            <i class="col">
              <%= new Date(row.dateIn).toDateString() %>
            </i>
            <br />
            <i class="col">
              <%= new Date(row.dateOut).toDateString() %>
            </i>
          </p>
          
          <form  action="/reserve/deletepath/<%= row._id %>" method="post" >
            <input class="btn btn-outline-primary" type="submit" value="Delete">
          </form>
          
        </div>
        <% }) %>
      </div>
    </div>
    
    <% } else if(!records1) { %>
    <h4 class="text-center" style="margin: 150px 0 150px;">
      You have no Car Reserved <br> 
      <a href="/dashboard"> Home</a>
    </h4>
    <% } %>
  </main>



